<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="OtpEditTextStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/otp_box_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:importantForAutofill" tools:targetApi="26">no</item>
    </style>
    <style name="CompactBottomNavTextActive">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CompactBottomNavTextInactive">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>



    <style name="ModernAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="dialogCornerRadius">24dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>

        <!-- Title Styling -->
        <item name="materialAlertDialogTitleTextStyle">@style/ModernDialogTitle</item>

        <!-- Body Text Styling -->
        <item name="materialAlertDialogBodyTextStyle">@style/ModernDialogBody</item>

        <!-- Button Styling -->
        <item name="buttonBarPositiveButtonStyle">@style/ModernDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ModernDialogNegativeButton</item>
    </style>

    <!-- Dialog Title Style -->
    <style name="ModernDialogTitle" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Dialog Body Style -->
    <style name="ModernDialogBody" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:lineHeight" tools:ignore="NewApi">22sp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Positive Button (Primary Action) -->
    <style name="ModernDialogPositiveButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/driver_green</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Negative Button (Secondary Action) -->
    <style name="ModernDialogNegativeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="rippleColor">@color/driver_green_bg</item>
    </style>

    <!-- Extended FAB Style -->
    <style name="ModernExtendedFAB" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="cornerRadius">16dp</item>
        <item name="elevation">6dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- Card Style -->
    <style name="ModernCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPadding">20dp</item>
    </style>

    <!-- Status Indicator Style -->
    <style name="StatusIndicator">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- Snackbar Custom Style -->
    <style name="ModernSnackbar" parent="Widget.Material3.Snackbar">
        <item name="android:layout_margin">16dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">6dp</item>
    </style>
    <!-- Full Screen Bottom Sheet Dialog for Map -->
    <style name="FullScreenBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/FullScreenBottomSheetStyle</item>
    </style>

    <style name="FullScreenBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>


    <!-- Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
        <item name="behavior_peekHeight">500dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
        <item name="android:elevation">16dp</item>
    </style>

    <!-- Bottom Sheet Shape -->
    <style name="BottomSheetShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>