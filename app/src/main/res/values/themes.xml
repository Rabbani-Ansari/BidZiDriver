<resources xmlns:tools="http://schemas.android.com/tools">

        <!-- Base application theme for Driver App - GREEN THEME -->
        <style name="Base.Theme.BidZiDriver" parent="Theme.Material3.DayNight.NoActionBar">
            <item name="colorPrimary">@color/driver_green</item>
            <item name="android:windowLightStatusBar">true</item>
            <item name="colorPrimaryContainer">@color/driver_green</item>
            <item name="colorSecondary">@color/driver_green</item>
            <item name="colorSecondaryContainer">@color/white</item>
            <item name="colorTertiary">@color/driver_green_dark</item>
            <item name="colorError">@color/red</item>
            <item name="colorOnPrimary">@color/white</item>
            <item name="colorOnSecondary">@color/black</item>
            <item name="colorOnTertiary">@color/white</item>
            <item name="colorOnError">@color/white</item>
            <item name="colorOnBackground">@color/black</item>
            <item name="colorOnSurface">@color/black</item>
            <item name="colorSurface">@color/white</item>
            <item name="elevationOverlayEnabled">false</item>
        </style>

        <!-- Main Driver App Theme -->
        <style name="Theme.BidZiDriver" parent="Theme.Material3.Light.NoActionBar">
            <item name="colorPrimary">@color/driver_green</item>
            <item name="colorOnPrimary">@color/white</item>
            <item name="android:statusBarColor">@color/driver_green</item>
        </style>

    <!-- Driver App Splash Theme -->
    <style name="Theme.BidZiDriver.Splash" parent="Theme.SplashScreen">
        <!-- Orange background -->
        <item name="windowSplashScreenBackground">@color/driver_green</item>

        <!-- BidZi logo text -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

        <!-- No animation -->
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- Post-splash theme -->
        <item name="postSplashScreenTheme">@style/Theme.BidZiDriver</item>
    </style>


    <!-- Button Style for Driver App -->
    <style name="DriverButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_background_driver</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">14dp</item>
    </style>

    <!-- Full Screen Dialog Theme -->
    <style name="FullScreenDialogTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Dialog Animations (Slide from bottom) -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>